#!/bin/bash

PHP="php7.4"

# Hide "last login" line when starting a new terminal session
touch $HOME/.hushlogin

# Install vim
sudo apt install vim

# Install zsh
echo 'Install zsh and zplug'
echo '-----------------'
sudo apt install gawk zsh
rm -rf $HOME/.zsh
curl -sL --proto-redir -all,https https://raw.githubusercontent.com/zplug/installer/master/installer.zsh | zsh
chsh -s $(which zsh)

# Add global gitignore
ln -s $HOME/.dotfiles/shell/.global-gitignore $HOME/.global-gitignore
git config --global core.excludesfile $HOME/.global-gitignore

# Symlink zsh prefs
rm $HOME/.zshrc
ln -s $HOME/.dotfiles/shell/.zshrc $HOME/.zshrc
ln -s $HOME/.dotfiles/shell/.p10k.zsh $HOME/.p10k.zsh

# Symlink profile
rm $HOME/.profile
ln -s $HOME/.dotfiles/shell/.profile $HOME/.profile

# Symlink vim prefs
rm $HOME/.vimrc
ln -s $HOME/.dotfiles/shell/.vimrc $HOME/.vimrc
rm $HOME/.vim
ln -s $HOME/.dotfiles/shell/.vim $HOME/.vim

echo 'Install bat'
echo '-----------'
wget https://github.com/sharkdp/bat/releases/download/v0.15.1/bat_0.15.1_amd64.deb
dpkg -i bat_0.15.1_amd64.deb

echo 'Install z'
echo '---------'
mkdir $HOME/apps
cd $HOME/apps
git clone https://github.com/rupa/z.git
cd $HOME

echo 'Install node'
echo '-----------'
curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash -
sudo apt-get install -y nodejs
mkdir ~/.npm-global
npm config set prefix '~/.npm-global'
echo 'export PATH=~/.npm-global/bin:$PATH' >> ~/.profile
source ~/.profile
npm completion >> ~/.zshrc

echo 'Install php'
echo '-----------'
sudo add-apt-repository ppa:ondrej/php
sudo apt update
sudo apt install $PHP

echo 'Install composer'
echo '----------------'
php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
php -r "if (hash_file('sha384', 'composer-setup.php') === 'a5c698ffe4b8e849a443b120cd5ba38043260d5c4023dbf93e1558871f1f07f58274fc6f4c93bcfd858c6bd0775cd8d1') { echo 'Installer verified'; } else { echo 'Installer corrupt'; unlink('composer-setup.php'); } echo PHP_EOL;"
php composer-setup.php
php -r "unlink('composer-setup.php');"
mv composer.phar /usr/local/bin/composer
echo 'export PATH="$PATH:$HOME/.composer/vendor/bin' >> ~/.profile
composer global require squizlabs/php_codesniffer

echo 'Install PECL'
echo '------------'
sudo apt install php-pear
sudo apt install php-dev

echo 'Install imagick'
echo '---------------'
sudo apt install imagemagick
sudo apt install libmagickwand-dev
sudo pecl install imagick

echo 'Install memcached'
echo '-----------------'
sudo apt install libmemcached-dev
sudo pecl install memcached

echo 'Install xdebug'
echo '--------------'
sudo pecl install xdebug

echo 'Install laravel valet'
echo '---------------------'
sudo apt install network-manager libnss3-tools jq xsel
sudo apt install $PHP-cli $PHP-curl $PHP-mbstring $PHP-mysql $PHP-xml $PHP-zip $PHP-mbstring
composer global require genesisweb/valet-linux-plus
valet install
sudo mysql_secure_installation

echo 'Manually install'
echo '----------------'
echo '* Download latest zip: https://github.com/tonsky/FiraCode'
echo '    * extract zip to ~/.local/share/fonts'


echo 'Reboot your system!'